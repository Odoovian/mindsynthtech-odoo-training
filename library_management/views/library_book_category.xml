<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="library_book_category_form_view" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form string="Book Category">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="library_book_category_list_view" model="ir.ui.view">
        <field name="name">library.book.category.list</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <list string="Book Category">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="action_library_book_category" model="ir.actions.act_window">
        <field name="name">Library Book Category</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>